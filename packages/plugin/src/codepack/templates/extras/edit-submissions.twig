{% extends "freeform-demo/_layout" %}

{% set pageTitle = "Extras" %} 
{% set page = "extras" %} 

{# Replace 'editSubmission' with your form handle. #}
{% set form = craft.freeform.form("editSubmission") %}

{% block content %}

<div class="container">

		<h2>Suppress Notifications and More<h2>
		<p>The exapmle rendering the form that allows editing a specific submission and suppresses all of the email notifications.</p>
		<hr /> 

	{% if form %}

		<h3> {{ form.name }}</h3> 
		<br />

		{# Replace "editSubmissions" with your form handle. #}
		{# .all shows all editSubmissions submits. #}
		{% set submissions = craft.freeform.submissions({ form: 'editSubmissions' }).all %}

		{# Replace 'submissionToken' from "twigCache" form submits #}
		{{ form.render({
			submissionToken: "tAGYiIBriEdsH5kA5Y2I6C0dYTKzaMiLAClkv4C7WL6zrpM7j99aWj8iydFK2BaRjBNT8JsB1RABmUbyFdps2WMJjvncKKfmoxmI",
			suppress: {
				api: true,
				connections: true,
				adminNotifications: true,
				dynamicRecipients: true,
				submitterNotifications: true,
				payments: true,
				webhooks: true,
			},
		}) }}

	{% else %}
	{# Show instructions to developer if they wish to see this page work correctly #}

        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">You can't see this page correctly until...</h4>
            <p class="mb-0">
                In order to view this page live, you'll need to make some adjustments to this template or your test form:
                <ol class="mb-0">
                    <li>Rename your test form handle to <code>editSubmissions</code> (or adjust the handle name this template is looking for).</li>
                    <li>
                        Make sure your test form includes the following fields (at minimum):
                        <ul>
                            <li>User Name text field with handle of <code>userName</code>.</li>
                        </ul>
                    </li>
                    <li>The person viewing this form is logged into their Craft account to see this working.</li>
                    <li>The person viewing this form have a first and last name set in their User account.</li>
                </ol>
            </p>
        </div>

    {% endif %}
	
</div>

{% endblock %}