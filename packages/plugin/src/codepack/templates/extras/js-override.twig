{% extends "freeform-demo/_layout" %}
{% set pageTitle = "Extras" %} 
{% set page = "extras" %} 

{# Replace 'jsOverride' with your form handle. #}
{% set form = craft.freeform.form("jsOverride") %}

{% block content %}

<div class="container">

    <h2>Loading Freeform JS manually</h2>
    <p>This example manually load the Freeform JS elsewhere in your template</p>

    {% if form %}

        <h3> {{ form.name }}</h3> 
		<br />

        {{ form.renderTag }}
            {% for column in form %}
                {% for field in column %}
                {{ field.render }}
                {% endfor %}
            {% endfor %}
        {{ form.renderClosingTag  }} 

        <script>

            // Replace "jsOverride" with your form handle
            const myForm = document.getElementById("jsOverride");
            document.addEventListener("freeform-on-submit", function (event) {  
                const form = event.form;
                const isBackButtonPressed = event.isBackButtonPressed;
                
                if (isBackButtonPressed) {
                    alert("Going Backward!");
                    return;
                }

                const name = form.querySelector('input[name="firstName"]').value;
                if (name !== 'Andris') {
                    alert("You're not Andris");
                    event.preventDefault();
                } 

                form.querySelector('input[name="firstName"]').value = 'Unknown';

            });

        </script>

    {% else %}
    {# Show instructions to developer if they wish to see this page work correctly #}
    
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">You can't see this page correctly until...</h4>
            <p class="mb-0">
                In order to view this page live, you'll need to make some adjustments to this template or on your test from:
                <ol class="mb-0">
                    <li>Rename your test form handle to <code>jsOverride</code> ( or adjust the handle name this template is looking for).</li>
                    <li>
                        Make sure your t est form includes the following fields (at minimum):
                        <ul>
                            <li>First Name text field with handle of <code>firstName</code>.</li> 
                            <li>Last Name text field with handle of <code>LastName</code>.</li>
                            <li>City text field with handle of <code>city</code>.</li> 
                            <li>Address text field with handle of  <code>address</code>.</li>
                            <li>T-shirt size  checkbox field with handle of <code>size</code>.</li>
                        </ul>
                    </li>
                    <li>The person viewing this form is logged into their Craft account to see this working.</li>
                    <li>The person viewing this form have a first and last name set in their User account.</li>
                </ol>
            </p>
        </div>

    {% endif %}

</div>

{% endblock %}