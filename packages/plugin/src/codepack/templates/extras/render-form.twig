{% extends "freeform-demo/_layout" %}

{% set pageTitle = "Extras" %}
{% set page = "extras" %}

{# Replace "renderForm" with your form handle. #}
{% set form = craft.freeform.form("renderForm") %}

{% block content %}

<div class="container">

    {% if form %}

        <h3>{{ form.name }}</h3>
        <br />

        <h2>Render form</h2>

        {% set  entry = craft.entries.one %}

        {# Replace "equipment" with your section handle #}
        {% for entry in craft.entries.section('equipment').limit(15) %}
            <div class="entry">
                <h2><a href="{{ entry.url }}">{{ entry.title }}</a></h2>

                {% if entry.news is defined and entry.news.name is  not empty %}
                    <h3>{{ entry.news.name }}</h3>
                    {{ entry.news.render() }}
                {% endif %}

            </div>

        {% endfor %}

    {% else %}
    {# Show instructions to developer if they wish to see this page work correctly #}

        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">You can't see this page correctly until...</h4>
            <p class="mb-0">
                In order to view this page live, you'll need to make some adjustments to this template or your test form:
                <ol class="mb-0">
                    <li>Rename your test form handle to <code>renderForm</code> (or adjust the handle name this template is looking for).</li>
                    <li>
                        Make sure your test form includes the following fields (at minimum):
                        <ul>
                            <li>First Name text field with handle of <code>firstName</code>.</li>
                            <li>Last Name text field with handle of <code>lastName</code>.</li>
                        </ul>
                    </li>
                    <li>The person viewing this form is logged into their Craft account to see this working.</li>
                    <li>The person viewing this form have a first and last name set in their User account.</li>
                </ol>
            </p>
        </div>

    {% endif %}

</div>

{% endblock %}