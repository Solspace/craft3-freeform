{% extends "freeform-demo/_layout" %}

{% set pageTitle = "Extras" %}
{% set page = "extras" %}

{# Replace 'templateSuccess' with your form handle. #}
{% set form = craft.freeform.form('templateSuccess') %}

{% block footerJs %}
    {{ parent() }}
    <script type="text/javascript">

        var form = $('form[data-id={{ form.anchor }}]');

        console.log(form);

        document.addEventListener('freeform-render-success', function (event) {

            event.preventDefault();

            // We locate the 'form-wrapper' DIV element which contains our form
            // and we swap its contents (the whole form) with the HTML that we
            // fetch from the "/freeform-demo/ajax-success" template
            $('#form-wrapper').load('/freeform-demo/extras/responses/success-message');
        });
    </script>
{% endblock %}

{% block content  %}

<div class="container">

    <h2>Alternate Success Markup from a Template</h2>
    <p>The following example override the default AJAX success message and instead load success markup from template.</p>
    <hr />

    {% if form %}

        <h3>{{ form.name }}</h3>
        <br />

        <div id="form-wrapper">
            {{ form.render }}
        </div>

    {% else %}
    {# Show instructions to developer if they wish to see this page work correctly #}

        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">You can't see this page correctly until...</h4>
            <p class="mb-0">
                In order to view this page live, you'll need to make some adjustments to this template or your test form:
                <ol class="mb-0">
                    <li>Rename your test form handle to <code>templateSuccess</code> (or adjust the handle name this template is looking for).</li>
                    <li>
                        Make sure your test form includes the following fields (at minimum):
                        <ul>
                            <li>First Name text field with handle of <code>firstName</code>.</li>
                            <li>Last Name text field with handle of <code>lastName</code>.</li>
                        </ul>
                    </li>
                    <li>The person viewing this form is logged into their Craft account to see this working.</li>
                    <li>The person viewing this form have a first and last name set in their User account.</li>
                </ol>
            </p>
        </div>
        
    {% endif %}

</div>

{% endblock %}